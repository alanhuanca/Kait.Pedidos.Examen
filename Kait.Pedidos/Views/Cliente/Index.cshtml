@model IEnumerable<Kaits.Dominio.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Clientes</h2>

<p>
    @Html.ActionLink("Crear nuevo cliente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreApellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DNI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaAuditoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioAuditoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreApellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DNI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaAuditoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsuarioAuditoria)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idCliente  }) |
            @Html.ActionLink("Detalle", "Details", new { id = item.idCliente }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idCliente })
        </td>
    </tr>
}

</table>
