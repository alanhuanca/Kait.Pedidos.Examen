@model IEnumerable<Kaits.Dominio.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de productos</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idProducto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaAuditoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioAuditoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idProducto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaAuditoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsuarioAuditoria)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idProducto }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.idProducto }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idProducto })
        </td>
    </tr>
}

</table>
